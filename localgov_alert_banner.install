<?php

/**
 * @file
 * Contains localgov_alert_banner.install.
 */

/**
 * Implements hook_uninstall().
 */
function localgov_alert_banner_uninstall() {

  // Remove configuration.
  $configs = [
    "block.block.views_block__alert_banner_alert_banner_block.yml",
    "core.entity_form_display.localgov_alert_banner.localgov_alert_banner.default.yml",
    "core.entity_view_display.localgov_alert_banner.localgov_alert_banner.default.yml",
    "field.field.localgov_alert_banner.localgov_alert_banner.link.yml",
    "field.field.localgov_alert_banner.localgov_alert_banner.short_description.yml",
    "field.field.localgov_alert_banner.localgov_alert_banner.type_of_alert.yml",
    "field.storage.localgov_alert_banner.link.yml",
    "field.storage.localgov_alert_banner.short_description.yml",
    "field.storage.localgov_alert_banner.type_of_alert.yml",
    "flag.flag.localgov_put_live.yml",
    "localgov_alert_banner.localgov_alert_banner_type.localgov_alert_banner.yml",
    "system.action.flag_action.localgov_put_live_flag.yml",
    "system.action.flag_action.localgov_put_live_unflag.yml",
    "user.role.emergency_publisher.yml",
    "views.view.alert_banner.yml",
  ];
  foreach ($configs as $config) {
    \Drupal::configFactory()->getEditable($config)->delete();
  }

  // Remove custom entity.
  $entity_update_manager = \Drupal::entityDefinitionUpdateManager();
  $entity_type = $entity_update_manager->getEntityType('localgov_alert_banner');
  $entity_update_manager->uninstallEntityType($entity_type);

}
